<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ShiftCraft.Mobile.ViewModels"
             xmlns:models="clr-namespace:ShiftCraft.Mobile.Models"
             x:Class="ShiftCraft.Mobile.Views.EmployeesPage"
             x:DataType="vm:EmployeesViewModel"
             Title="Employees"
             BackgroundColor="{StaticResource Gray100}">
    
    <RefreshView IsRefreshing="{Binding IsBusy}" 
                 Command="{Binding RefreshCommand}"
                 RefreshColor="{StaticResource Primary}">
        <CollectionView ItemsSource="{Binding Employees}"
                        SelectionMode="None">
            
            <CollectionView.Header>
                <StackLayout Padding="15,10">
                    <Label Text="{Binding Employees.Count, StringFormat='{0} employees'}"
                           FontSize="12"
                           TextColor="{StaticResource Gray500}"/>
                </StackLayout>
            </CollectionView.Header>
            
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Employee">
                    <Frame Margin="10,5" Padding="15" CornerRadius="10" HasShadow="True" BackgroundColor="White">
                        <Grid ColumnDefinitions="50,*" ColumnSpacing="15">
                            
                            <!-- Avatar -->
                            <Frame Grid.Column="0" 
                                   BackgroundColor="{StaticResource Primary}" 
                                   CornerRadius="25" 
                                   HeightRequest="50" 
                                   WidthRequest="50"
                                   Padding="0"
                                   HasShadow="False">
                                <Label Text="{Binding FirstName, StringFormat='{0:0}'}" 
                                       FontSize="20" 
                                       FontAttributes="Bold"
                                       TextColor="White"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Frame>
                            
                            <!-- Info -->
                            <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="3">
                                <Label Text="{Binding FullName}" 
                                       FontSize="16" 
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource Gray900}"/>
                                <HorizontalStackLayout Spacing="5">
                                    <Label Text="ðŸ“§" FontSize="12"/>
                                    <Label Text="{Binding Email}" 
                                           FontSize="13" 
                                           TextColor="{StaticResource Gray600}"/>
                                </HorizontalStackLayout>
                                <HorizontalStackLayout Spacing="5">
                                    <Label Text="ðŸ“±" FontSize="12"/>
                                    <Label Text="{Binding Phone}" 
                                           FontSize="13" 
                                           TextColor="{StaticResource Gray600}"/>
                                </HorizontalStackLayout>
                                <HorizontalStackLayout Spacing="5">
                                    <Frame BackgroundColor="{Binding IsActive, Converter={StaticResource ActiveStatusColorConverter}}"
                                           CornerRadius="8"
                                           Padding="8,2"
                                           HasShadow="False">
                                        <Label Text="{Binding IsActive, Converter={StaticResource ActiveStatusTextConverter}}" 
                                               FontSize="10" 
                                               TextColor="White"/>
                                    </Frame>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                            
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            
            <CollectionView.EmptyView>
                <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="10">
                    <Label Text="ðŸ‘¥" FontSize="48" HorizontalOptions="Center"/>
                    <Label Text="No employees found" 
                           FontSize="16"
                           TextColor="{StaticResource Gray500}"
                           HorizontalOptions="Center"/>
                    <Label Text="Pull down to refresh" 
                           FontSize="12"
                           TextColor="{StaticResource Gray400}"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </CollectionView.EmptyView>
        </CollectionView>
    </RefreshView>
</ContentPage>
