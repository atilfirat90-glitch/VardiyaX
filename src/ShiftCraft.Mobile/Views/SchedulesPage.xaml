<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ShiftCraft.Mobile.ViewModels"
             xmlns:models="clr-namespace:ShiftCraft.Mobile.Models"
             x:Class="ShiftCraft.Mobile.Views.SchedulesPage"
             x:DataType="vm:SchedulesViewModel"
             Title="Schedules"
             BackgroundColor="{StaticResource Gray100}">

    <Grid RowDefinitions="Auto,*">
        <!-- Offline Banner -->
        <Frame Grid.Row="0"
               IsVisible="{Binding IsOffline}"
               BackgroundColor="#FFF3E0"
               CornerRadius="0"
               Padding="10"
               Margin="0">
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="8">
                <Label Text="ðŸ“´" FontSize="14"/>
                <Label Text="{Binding OfflineStatusText}"
                       FontSize="12"
                       TextColor="#E65100"
                       VerticalOptions="Center"/>
            </HorizontalStackLayout>
        </Frame>

        <RefreshView Grid.Row="1"
                     IsRefreshing="{Binding IsBusy}" 
                     Command="{Binding RefreshCommand}"
                     RefreshColor="{StaticResource Primary}">
            <CollectionView ItemsSource="{Binding Schedules}"
                            SelectionMode="None">
                
                <CollectionView.Header>
                    <StackLayout Padding="15,10">
                        <Label Text="{Binding Schedules.Count, StringFormat='{0} schedules'}"
                               FontSize="12"
                               TextColor="{StaticResource Gray500}"/>
                    </StackLayout>
                </CollectionView.Header>
                
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:WeeklySchedule">
                        <Frame Margin="10,5" Padding="15" CornerRadius="10" HasShadow="True" BackgroundColor="White">
                            <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto" RowSpacing="8">
                                
                                <!-- Week Range -->
                                <HorizontalStackLayout Grid.Row="0" Grid.Column="0" Spacing="8">
                                    <Label Text="ðŸ“…" FontSize="18"/>
                                    <Label Text="{Binding WeekRange}" 
                                           FontSize="16" 
                                           FontAttributes="Bold"
                                           TextColor="{StaticResource Gray900}"
                                           VerticalOptions="Center"/>
                                </HorizontalStackLayout>
                                
                                <!-- Status Badge -->
                                <Frame Grid.Row="0" Grid.Column="1"
                                       BackgroundColor="{Binding Status, Converter={StaticResource ScheduleStatusColorConverter}}"
                                       CornerRadius="12"
                                       Padding="12,4"
                                       HasShadow="False">
                                    <Label Text="{Binding StatusText}" 
                                           FontSize="11" 
                                           FontAttributes="Bold"
                                           TextColor="White"/>
                                </Frame>
                                
                                <!-- Details -->
                                <HorizontalStackLayout Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Spacing="15">
                                    <HorizontalStackLayout Spacing="4">
                                        <Label Text="ðŸ¢" FontSize="12"/>
                                        <Label Text="{Binding BusinessId, StringFormat='Business #{0}'}" 
                                               FontSize="12" 
                                               TextColor="{StaticResource Gray500}"/>
                                    </HorizontalStackLayout>
                                    <HorizontalStackLayout Spacing="4">
                                        <Label Text="ðŸ“‹" FontSize="12"/>
                                        <Label Text="{Binding Id, StringFormat='Schedule #{0}'}" 
                                               FontSize="12" 
                                               TextColor="{StaticResource Gray500}"/>
                                    </HorizontalStackLayout>
                                </HorizontalStackLayout>
                                
                                <!-- Publish Button (only for Draft, disabled when offline) -->
                                <Button Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                        Text="ðŸš€ Publish Schedule"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.PublishCommand}"
                                        CommandParameter="{Binding .}"
                                        IsVisible="{Binding Status, Converter={StaticResource DraftStatusConverter}}"
                                        IsEnabled="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.CanPublish}"
                                        BackgroundColor="{StaticResource Primary}"
                                        TextColor="White"
                                        CornerRadius="5"
                                        HeightRequest="40"
                                        FontSize="13"/>
                                
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                
                <CollectionView.EmptyView>
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="10">
                        <Label Text="ðŸ“…" FontSize="48" HorizontalOptions="Center"/>
                        <Label Text="No schedules found" 
                               FontSize="16"
                               TextColor="{StaticResource Gray500}"
                               HorizontalOptions="Center"/>
                        <Label Text="Pull down to refresh" 
                               FontSize="12"
                               TextColor="{StaticResource Gray400}"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>
