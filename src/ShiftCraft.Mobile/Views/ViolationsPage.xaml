<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ShiftCraft.Mobile.ViewModels"
             xmlns:models="clr-namespace:ShiftCraft.Mobile.Models"
             x:Class="ShiftCraft.Mobile.Views.ViolationsPage"
             x:DataType="vm:ViolationsViewModel"
             Title="Rule Violations"
             BackgroundColor="{StaticResource Gray100}">
    
    <RefreshView IsRefreshing="{Binding IsBusy}" 
                 Command="{Binding RefreshCommand}"
                 RefreshColor="{StaticResource Primary}">
        <CollectionView ItemsSource="{Binding Violations}"
                        SelectionMode="None">
            
            <CollectionView.Header>
                <StackLayout Padding="15,10">
                    <Label Text="{Binding Violations.Count, StringFormat='{0} violations'}"
                           FontSize="12"
                           TextColor="{StaticResource Gray500}"/>
                </StackLayout>
            </CollectionView.Header>
            
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:RuleViolation">
                    <Frame Margin="10,5" Padding="15" CornerRadius="10" HasShadow="True" BackgroundColor="White">
                        <Grid RowDefinitions="Auto,Auto,Auto" RowSpacing="8">
                            
                            <!-- Header with Severity -->
                            <Grid Grid.Row="0" ColumnDefinitions="*,Auto">
                                <HorizontalStackLayout Spacing="8">
                                    <Label Text="{Binding Severity, Converter={StaticResource SeverityIconConverter}}" FontSize="18"/>
                                    <Label Text="{Binding RuleType}" 
                                           FontSize="15" 
                                           FontAttributes="Bold"
                                           TextColor="{StaticResource Gray900}"
                                           VerticalOptions="Center"/>
                                </HorizontalStackLayout>
                                
                                <Frame Grid.Column="1"
                                       BackgroundColor="{Binding Severity, Converter={StaticResource SeverityColorConverter}}"
                                       CornerRadius="10"
                                       Padding="10,3"
                                       HasShadow="False">
                                    <Label Text="{Binding SeverityText}" 
                                           FontSize="10" 
                                           FontAttributes="Bold"
                                           TextColor="White"/>
                                </Frame>
                            </Grid>
                            
                            <!-- Description -->
                            <Label Grid.Row="1"
                                   Text="{Binding Description}" 
                                   FontSize="13"
                                   TextColor="{StaticResource Gray600}"
                                   LineBreakMode="WordWrap"/>
                            
                            <!-- Footer -->
                            <HorizontalStackLayout Grid.Row="2" Spacing="15">
                                <HorizontalStackLayout Spacing="4">
                                    <Label Text="ðŸ•" FontSize="11"/>
                                    <Label Text="{Binding ViolationDate, StringFormat='{0:dd MMM yyyy}'}" 
                                           FontSize="11" 
                                           TextColor="{StaticResource Gray500}"/>
                                </HorizontalStackLayout>
                                <HorizontalStackLayout Spacing="4">
                                    <Label Text="ðŸ‘¤" FontSize="11"/>
                                    <Label Text="{Binding EmployeeId, StringFormat='Ã‡alÄ±ÅŸan #{0}'}" 
                                           FontSize="11" 
                                           TextColor="{StaticResource Gray500}"/>
                                </HorizontalStackLayout>
                                <HorizontalStackLayout Spacing="4">
                                    <Label Text="ðŸ“‹" FontSize="11"/>
                                    <Label Text="{Binding WeeklyScheduleId, StringFormat='Vardiya #{0}'}" 
                                           FontSize="11" 
                                           TextColor="{StaticResource Gray500}"/>
                                </HorizontalStackLayout>
                            </HorizontalStackLayout>
                            
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            
            <CollectionView.EmptyView>
                <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="10">
                    <Label Text="âœ…" FontSize="48" HorizontalOptions="Center"/>
                    <Label Text="No violations found" 
                           FontSize="16"
                           TextColor="{StaticResource Gray500}"
                           HorizontalOptions="Center"/>
                    <Label Text="All schedules are compliant!" 
                           FontSize="12"
                           TextColor="{StaticResource Gray400}"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </CollectionView.EmptyView>
        </CollectionView>
    </RefreshView>
</ContentPage>
